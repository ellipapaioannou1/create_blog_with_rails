<div class="container">
  <div class="row justify-content-center">
   <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, local: true) do |f| %>

        <div class="row mb-3 justify-content-center">
          <%= f.label :username, class: "col-2 col-form-label " %>
          <p>
          <div class="col-8">
            <%= f.text_field :username, class:"form-control",placeholder: "Enter username" %>
          </div>
        </div>

        <div class="row mb-3 justify-content-center ">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <p>
          <div class="col-8">
            <%= f.email_field :email, class:"form-control", placeholder: "Enter email" %>
            </div>
        </div>

        <div class="row mb-3 justify-content-center ">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <p>
        <div class="col-8">
          <%= f.password_field :password, class:"form-control", placeholder: "Create your password" %>
          </div>
      </div>

        <div class="row mb-3 col-3 mx-auto">
          <%= f.submit(@user.new_record? ? 'Sign Up' : "Update account", class: "btn btn-success btn-lg") %>
        </div>
      <%end%>
    </div>
    <div class="mb-3">
     <%= link_to 'Return to listing', articles_path(@article), class:"row justify-content-center" %> 
     </div>
  </div>

</div>