<div class="container ">
  <div class="row justify-content-center">
  <div class="col-8 ">
   <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, local: true) do |f| %>

        <div class="row mb-3 justify-content-center">
          <%= f.label :title, class: "col-2 col-form-label " %>
          <p>
          <div class="col-8">
            <%= f.text_field :title, class:"form-control",placeholder: "Title" %>
          </div>
        </div>

        <div class="row mb-3 justify-content-center ">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <p>
          <div class="col-8">
            <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Description" %>
            </div>
        </div>

        <div class="row mb-3 col-3 mx-auto">
          <%= f.submit 'Save', class: "btn btn-primary btn-lg" %>
        </div>
      <%end%>
    </div>
    <div class="mb-3">
     <%= link_to 'Return to listing', articles_path(@article), class:"row justify-content-center" %> 
     </div>
  </div>

</div>